@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<style>
    :root {
        --primary-purple: #6b46c1;
        --light-purple: #9f7aea;
        --dark-purple: #4c1d95;
        --purple-hover: #805ad5;
        --light-bg: #f9f7ff;
    }

    body {
        background-color: var(--light-bg);
        font-family: 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }

    .forgot-container {
        max-width: 450px;
        margin: 3rem auto;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
        border-radius: 10px;
        background-color: white;
    }

    .page-title {
        color: var(--primary-purple);
        font-weight: 600;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .forgot-card {
        padding: 1rem;
        border-radius: 8px;
        background-color: white;
    }

    .form-floating {
        margin-bottom: 1.5rem;
    }

    .form-control:focus {
        border-color: var(--light-purple);
        box-shadow: 0 0 0 0.25rem rgba(107, 70, 193, 0.25);
    }

    .btn-primary {
        background-color: var(--primary-purple);
        border-color: var(--primary-purple);
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: var(--purple-hover);
            border-color: var(--purple-hover);
        }

    .divider {
        height: 1px;
        background-color: #e2e8f0;
        margin: 1.5rem 0;
    }

    .text-danger {
        color: #e53e3e !important;
    }

    .nav-links {
        text-align: center;
        margin-top: 1.5rem;
    }

        .nav-links a {
            color: var(--dark-purple);
            text-decoration: none;
            transition: color 0.3s ease;
            display: block;
            margin-bottom: 0.5rem;
        }

            .nav-links a:hover {
                color: var(--primary-purple);
                text-decoration: underline;
            }

    .description {
        text-align: center;
        margin-bottom: 1.5rem;
        color: #4a5568;
    }
</style>

<div class="forgot-container">
    <h1 class="page-title">@ViewData["Title"]</h1>
    <p class="description">Please enter your email address below to receive a password reset link.</p>
    <div class="forgot-card">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
            </div>
            <div class="divider"></div>
            <div class="nav-links">
                <p>
                    <a asp-page="./Login">Return to login</a>
                </p>
                <p>
                    <a asp-page="./Register">Register as a new user</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}